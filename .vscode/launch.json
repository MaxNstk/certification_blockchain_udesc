{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Nest Framework",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "start:debug",
          "--",
          "--inspect-brk"
        ],
        "autoAttachChildProcesses": true,
        "restart": true,
        "sourceMaps": true,
        "outFiles": [
          "${workspaceFolder}/application_gateway/dist/**/*.js"
        ],
        "stopOnEntry": false,
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}/application_gateway"
      }
    ]
  }
  